给两个字符串，求两个字符串的最长公共子串。例如abcdef和ababcecdef，，最长子串是cdef，长度是4.


package main

import (
	"bufio"
	"fmt"
	"os"
	"strings"
)

// abcdef
// ababcecdef
func GetLongestSameStr(str1, str2 string) string {
	data := make(map[string]int)
	left := 0
	right := 1
	for right < len(str1) {
		if strings.Contains(str2, string(str1[left:right])) {
			data[string(str1[left:right])] = len(str1[left:right])
			right++
		} else {
			left++
		}
	}
	max := 0
	res := ""
	for k, v := range data {
		if v > max {
			max = v
			res = k
		}
	}
	fmt.Println(data)
	return res
}

func main() {
	input:=bufio.NewScanner(os.Stdin)
	input.Scan()
	str1:=input.Text()
	input.Scan()
	str2:=input.Text()
	_,max:=getLongestSubStr(str1,str2)
	fmt.Println(max)
}
